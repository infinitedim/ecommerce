{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.jsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "react/react-in-jsx-scope": "off",
    "no-alert": "error",
    "no-console": "off",
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "jsxSingleQuote": false,
        "singleQuote": false,
        "endOfLine": "auto",
        "tabWidth": 2,
        "printWidth": 80,
        "singleAttributePerLine": true,
        "trailingComma": "all"
      }
    ],
    "jsx-a11y/control-has-associated-label": [
      2,
      {
        "labelAttributes": ["label"],
        "controlComponents": ["CustomComponent"],
        "ignoreElements": [
          "audio",
          "canvas",
          "embed",
          "input",
          "textarea",
          "tr",
          "video"
        ],
        "ignoreRoles": [
          "grid",
          "listbox",
          "menu",
          "menubar",
          "radiogroup",
          "row",
          "tablist",
          "toolbar",
          "tree",
          "treegrid"
        ],
        "depth": 3
      }
    ]
  }
}
